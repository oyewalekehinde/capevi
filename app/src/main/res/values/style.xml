<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue900</item>
        <item name="colorPrimaryDark">@color/blue900</item>
        <item name="colorAccent">@color/blue200</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="splashScreenIconSize">108dp</item>
    </style>
</resources>